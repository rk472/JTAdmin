<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BatchAddFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/batch_date"
            android:layout_width="280dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Date"
            android:focusable="false"
            android:background="@drawable/out_shape"
            android:focusableInTouchMode="false"
            />

        <EditText
            android:id="@+id/batch_name"
            android:layout_width="280dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:background="@drawable/out_shape"
            android:hint="Batch Name" />

        <EditText
            android:id="@+id/batch_timing"
            android:layout_width="280dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:background="@drawable/out_shape"
            android:hint="Batch Timing" />

        <Button
            android:id="@+id/batch_add_button"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:background="@drawable/fill_shape"
            android:layout_marginTop="40dp"
            android:text="add batch" />
    </LinearLayout>
</FrameLayout>