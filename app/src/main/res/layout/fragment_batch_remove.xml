<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BatchRemoveFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/out_shape">

            <Spinner
                android:id="@+id/batch_list"
                android:layout_width="300dp"
                android:layout_height="60dp"></Spinner>
        </LinearLayout>
        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/fill_shape"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            android:text="delete batch"
            android:id="@+id/batch_delete_button"/>
    </LinearLayout>

</FrameLayout>