<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NoticeAddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/notice_title"
            android:layout_width="280dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:background="@drawable/out_shape"
            android:hint="Notice Title"
            />
        <EditText
            android:layout_width="280dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:background="@drawable/out_shape"
            android:hint="Notice Body"
            android:id="@+id/notice_body"/>
        <Button
            android:layout_width="280dp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:background="@drawable/fill_shape"
            android:text="Add Notice"
            android:id="@+id/notice_add_button"/>
    </LinearLayout>
</FrameLayout>